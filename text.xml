<body  oncontextmenu="return false" onkeydown="return false;" onmousedown="return false;">
  <div class="container">
      <div class="header">
          <img src="KRMU_LOGO.png" alt="KR Mangalam University Logo">
          <h1>Search Engine For KRMU</h1>
      </div>
      <div class="gcse-searchbox" data-newWindow="true" data-queryParameterName="q" data-adblock="1" data-enableHistory="true" data-theme="google-snow"></div>
      <div class="gcse-searchresults"></div>
  </div><script>
    window.onload = function () {
      var title = "Discover KR Mangalam University";
      var textBox = document.querySelector("#gsc-i-id1");
      var button = document.querySelector(".gsc-search-button-v2 svg title");
      var container = document.querySelector('.container');

      textBox.placeholder = title;
      textBox.title = title;
      button.innerHTML = title;

      textBox.addEventListener('focus', function() {
          container.classList.add('focused');
      });

      textBox.addEventListener('blur', function() {
          container.classList.remove('focused');
      });

      // Block inspect by js
      document.addEventListener('contextmenu', (e) => e.preventDefault());

      function ctrlShiftKey(e, keyCode) {
        return e.ctrlKey && e.shiftKey && e.keyCode === keyCode.charCodeAt(0);
      }

      document.onkeydown = (e) => {
        // Disable F12, Ctrl + Shift + I, Ctrl + Shift + J, Ctrl + U
        if (
          e.keyCode === 123 ||
          ctrlShiftKey(e, 'I') ||
          ctrlShiftKey(e, 'J') ||
          ctrlShiftKey(e, 'C') ||
          (e.ctrlKey && e.keyCode === 'U'.charCodeAt(0))
        ) return false;
      };
    };
  </script>

  <script src="https://cdn.githubraw.com/harshitj183/harshitj183/main/badge/floating.js"></script>
